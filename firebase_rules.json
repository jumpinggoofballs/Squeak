{
    "rules": {
        "c": {
            "$uid": {
                ".read": "$uid === auth.uid",
                ".write": "(root.child('u').child($uid).child('x').child(auth.uid).val() === true) || ($uid === auth.uid)"
            }
        },
        "n": {
            "$uid": {
                ".read": "$uid === auth.uid",
                ".write": "auth != null"
            }
        },
        "u": {
            "$uid": {
                ".read": "$uid === auth.uid",
                ".write": "$uid === auth.uid",
                "z": {
                    ".write": "root.child('u').child($uid).child('x').child(auth.uid).val() === true"
                }
            }
        }
    }
}