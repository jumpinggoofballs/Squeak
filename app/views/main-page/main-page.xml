<Page class="page" loaded="pageLoaded" xmlns:FAB="nativescript-floatingactionbutton">
    <Page.actionBar>
        <ActionBar title="Squeeeak" icon="" class="action-bar">
            <!--<NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="onNavBtnTap"/>-->
            <ActionItem tap="navigateToSettings" rippleColor="#f1f1f1" ios.position="right" ios.systemIcon="2" android.systemIcon="ic_settings"/>
        </ActionBar>
    </Page.actionBar>

    <grid-layout rows="auto, *">
        <ListView row="1" items="{{ myFriends }}" itemTap="listViewItemTap">
            <ListView.itemTemplate>
                <Label text="{{ nickname }}" textWrap="true" class="friendListRow" />
            </ListView.itemTemplate>
        </ListView>
        <FAB:fab tap="fabTap" row="1" icon="res://ic_add_white" rippleColor="#f1f1f1" class="fab-button" />
    </grid-layout>
</Page>
